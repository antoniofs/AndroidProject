<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.unisantos.checkbox.MainActivity">

    <TextView
        android:text="Quais Animais de Estimação Você tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Cao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:id="@+id/cbxCao" />

    <CheckBox
        android:text="Gato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbxCao"
        android:layout_alignLeft="@+id/cbxPeixe"
        android:layout_alignStart="@+id/cbxPeixe"
        android:id="@+id/cbxGato" />

    <CheckBox
        android:text="Peixe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxPeixe"
        android:layout_below="@+id/cbxGato"
        android:layout_alignLeft="@+id/cbxCao"
        android:layout_alignStart="@+id/cbxCao" />

    <Button
        android:text="Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cbxCao"
        android:layout_toEndOf="@+id/cbxCao"
        android:id="@+id/btnResultado" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnResultado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/txtResultado" />

</RelativeLayout>
