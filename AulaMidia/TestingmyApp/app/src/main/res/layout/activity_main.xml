<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/testing"
    tools:context="br.unisantos.testingmyapp.MainActivity">

    <EditText
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignTop="@+id/edtEmail"
        android:layout_alignStart="@+id/edtEmail"
        android:layout_marginTop="42dp"
        android:id="@+id/edtPassword"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:padding="5dp"
        tools:ignore="LabelFor"
        android:hint="@string/password" />

    <EditText
        android:layout_height="35dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="226dp"
        android:id="@+id/edtEmail"
        android:layout_width="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        tools:ignore="LabelFor"
        android:hint="@string/email" />

    <Button
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/btnLogin"
        android:background="@color/botao"
        android:layout_below="@+id/edtPassword"
        android:layout_alignEnd="@+id/edtPassword"
        android:layout_width="290dp"
        android:textColor="@color/write"
        android:text="@string/login" />

    <Button
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/facebook"
        android:id="@+id/btnFacebook"
        android:layout_below="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="@string/esqueceu_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text"
        android:textColor="@color/write"
        android:id="@+id/txtEsqueciSenha"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnFacebook"
        android:layout_marginBottom="12dp" />

    <TextView
        android:text="@string/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtEsqueciSenha"
        android:textColor="@color/write"
        android:textSize="@dimen/size_text"
        android:layout_alignEnd="@+id/btnFacebook"
        android:id="@+id/txtCadastro" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/txtErro"
        android:layout_width="200dp"
        android:layout_above="@+id/edtPassword"
        android:layout_alignEnd="@+id/edtEmail" />
</RelativeLayout>
