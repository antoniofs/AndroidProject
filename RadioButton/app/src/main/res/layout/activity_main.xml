<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.unisantos.radiobutton.MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="@string/nome"
        android:layout_width="match_parent"
        android:id="@+id/textView3"
        android:layout_height="50dp" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:id="@+id/radioButton">

        <RadioButton
            android:text="Lasanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbLasanha"
            android:layout_weight="1" />

        <RadioButton
            android:text="Batata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbBatata"
            android:layout_weight="1" />

        <RadioButton
            android:text="Macarao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbMacarao"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:text="Escolher"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEscolher" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtExibicao" />
</LinearLayout>
